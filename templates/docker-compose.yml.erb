version: '2'
services:
  <% if options[:postgres] -%>
  postgres:
    image: postgres
    environment:
      POSTGRES_DB: listing-api
      POSTGRES_PASSWORD: password
    volumes:
      - 'postgres:/var/lib/postgresql/data'
  <% end -%>
  <% if options[:mysql] -%>
  mysql:
    image: mysql
    environment:
      MYSQL_DATABASE: musolist
      MYSQL_ROOT_PASSWORD: password
    volumes:
      - 'mysql:/var/lib/mysql'
  <% end -%>

  <% if options[:elasticsearchi] -%>
  elasticsearch:
    image: elasticsearch:1.7.1
    ports:
      - "9200"
      - "9300"
    volumes:
      - 'elasticsearch:/usr/share/elasticsearch/data'
  <% end -%>

  <% if options[:redis] -%>
  redis:
    image: 'redis:3.2-alpine'
    command: redis-server
    ports:
      - '6379'
    volumes:
      - 'redis:/var/lib/redis/data'
  <% end -%>

  web:
    build: .
    command: bundle exec rails s -p 3000 -b '0.0.0.0'
    volumes:
      - .:/app
      - 'bundle:/bundle'
    ports:
      - "3000:3000"
    links:
      <% if options[:postgres] -%>
      - postgres
      <% end -%>
      <% if options[:mysql] -%>
      - mysql
      <% end -%> 
      <% if options[:redis] -%>
      - redis
      <% end -%>
      <% if options[:elasticsearch] -%>
      - elasticsearch
      <% end -%>

volumes:
  <% if options[:postgres] -%>
  postgres:
  <% end -%>
  <% if options[:mysql] -%>
  mysql:
  <% end -%> 
  <% if options[:redis] -%>
  redis:
  <% end -%>
  <% if options[:elasticsearch] -%>
  elasticsearch:
  <% end -%>

