version: '2'
services:
  <% if options[:postgres] -%>
  postgres:
    image: postgres
    environment:
      POSTGRES_DB: "${POSTGRES_DB}"
      POSTGRES_PASSWORD: "${POSTGRES_PASSWORD}"
      POSTGRES_USER: "${POSTGRES_USER}"
    ports:
      - "5432"
    volumes:
      - 'postgres:/var/lib/postgresql/data'
  <% end -%>
  <% if options[:mysql] -%>
  mysql:
    image: mysql
    environment:
      MYSQL_DATABASE: "${MYSQL_DATABASE}"
      MYSQL_ROOT_PASSWORD: "${MYSQL_ROOT_PASSWORD}"
    ports:
      - '3306'
    volumes:
      - 'mysql:/var/lib/mysql'
  <% end -%>

  <% if options[:solr] %>
    solr:
    image: solr:latest
    ports:
      - "8983"
    volumes:
      - 'solr:/opt/solr/server/solr/mycores'
    entrypoint:
      - docker-entrypoint.sh
      - solr-precreate
      - mycore
    # docker-compose exec --user=solr solr bin/solr create_core -c CORENAME
  <% end -%>

  <% if options[:elasticsearchi] -%>
  elasticsearch:
    image: elasticsearch:1.7.1
    ports:
      - "9200"
      - "9300"
    volumes:
      - 'elasticsearch:/usr/share/elasticsearch/data'
  <% end -%>

  <% if options[:redis] -%>
  redis:
    image: 'redis:3.2-alpine'
    command: redis-server
    ports:
      - '6379'
    volumes:
      - 'redis:/var/lib/redis/data'
  <% end -%>

  web:
    build: .
    image: <%= project_name %>:latest
    command: bundle exec rails s -p 3000 -b '0.0.0.0'
    volumes:
      - .:/app
      - 'bundle:/bundle'
    ports:
      - "3000:3000"
    environment:
      - RAILS_ENV=development
      - RACK_ENV=development
    links:
      <% if options[:postgres] -%>
      - postgres
      <% end -%>
      <% if options[:mysql] -%>
      - mysql
      <% end -%> 
      <% if options[:redis] -%>
      - redis
      <% end -%>
      <% if options[:elasticsearch] -%>
      - elasticsearch
      <% end -%>
      <% if options[:solr] -%>
      - solr
      <% end -%>

volumes:
  bundle:
  <% if options[:postgres] -%>
  postgres:
  <% end -%>
  <% if options[:mysql] -%>
  mysql:
  <% end -%> 
  <% if options[:redis] -%>
  redis:
  <% end -%>
  <% if options[:elasticsearch] -%>
  elasticsearch:
  <% end -%>
  <% if options[:solr] -%>
  solr:
  <% end -%>
