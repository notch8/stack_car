version: '2.1'
services:
<% if options[:postgres] -%>
  postgres:
    image: postgres
    env_file:
      - .env
    ports:
      - "5432"
    volumes:
      - 'postgres:/var/lib/postgresql/data'
<% end -%>
<% if options[:mysql] -%>
  mysql:
    image: mysql
    env_file:
      - .env
    ports:
      - '3306'
    volumes:
      - 'mysql:/var/lib/mysql'
<% end -%>
<% if options[:elasticsearch] -%>
  elasticsearch:
    image: elasticsearch:1.7.1
    env_file:
      - .env
    ports:
      - "9200"
      - "9300"
    volumes:
      - 'elasticsearch:/usr/share/elasticsearch/data'
<% end -%>
<% if options[:solr] %>
  solr:
    image: solr:latest
    ports:
      - "8983"
    volumes:
      - 'solr:/opt/solr/server/solr/mycores'
    entrypoint:
      - docker-entrypoint.sh
      - solr-precreate
      - mycore
    # docker-compose exec --user=solr solr bin/solr create_core -c CORENAME
<% end -%>
<% if options[:redis] -%>
  redis:
    image: 'redis:3.2-alpine'
    command: redis-server
    ports:
      - '6379'
    volumes:
      - 'redis:/var/lib/redis/data'
<% end -%>
<% if options[:mongodb] -%>
  mongodb:
    image: mongo:2.6.12
    volumes:
      - 'mongodb:/data/db'
    ports:
      - "27017"
<% end -%>
<% if options[:memcached] -%>
  memcached:
    image: memcached
    ports:
      - "11211"
<% end -%>
<% if options[:fcrepo] -%>
  fcrepo:
    image: botimer/fcrepo:4.5.1
    volumes:
      - 'fcrepo:/opt/data'
    ports:
      - "8080"
<% end -%>
  web:
    build: .
    image: "${REGISTRY_HOST}${REGISTRY_URI}:${TAG:-master}"
    volumes:
      - .:/home/app/webapp
    env_file:
      - .env
    # Keep the stdin open, so we can attach to our app container's process
    # and do things such as byebug, etc:
    stdin_open: true
    # Enable sending signals (CTRL+C, CTRL+P + CTRL+Q) into the container:
    tty: true
    ports:
      - "80"
    depends_on:
<%= compose_depends %>

volumes:
<% if options[:postgres] -%>
  postgres:
<% end -%>
<% if options[:mysql] -%>
  mysql:
<% end -%>
<% if options[:elasticsearch] -%>
  elasticsearch:
<% end -%>
<% if options[:solr] -%>
  solr:
<% end -%>
<% if options[:redis] -%>
  redis:
<% end -%>
<% if options[:mongodb] -%>
  mongodb:
<% end -%>
