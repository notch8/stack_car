<% if options[:mysql] -%>
login: &login
  adapter: <%%= ENV['DATABASE_ADAPTER'] %>
  host: <%%= ENV['DATABASE_HOST'] %>
  username: <%%= ENV['DATABASE_USER'] %>
  password: <%%= ENV['DATABASE_PASSWORD'] %>
  database: <%%= ENV['DATABASE_NAME'] %>
  pool: 5
  timeout: 5000
<% end -%>
<% if options[:postgres] -%>
login: &login
  adapter: <%%= ENV['DATABASE_ADAPTER'] %>
  host: <%%= ENV['DATABASE_HOST'] %>
  username: <%%= ENV['DATABASE_USER'] %>
  password: <%%= ENV['DATABASE_PASSWORD'] %>
  database: <%%= ENV['DATABASE_NAME'] %>
  pool: 5
  timeout: 5000
<% end -%>


development:
  <<: *login

test:
  <<: *login
  database: <%%= ENV['TEST_DB'] %>

staging:
  <<: *login


production:
  <<: *login
