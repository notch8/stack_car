version: '2'
services:
<% if options[:postgres] -%>
  postgres:
    image: postgres
    env_file:
      - .env
    ports:
      - "5432"
    volumes:
      - 'postgres:/var/lib/postgresql/data'
<% end -%>
<% if options[:mysql] -%>
  mysql:
    image: mysql
    env_file:
      - .env
    ports:
      - '3306'
    volumes:
      - 'mysql:/var/lib/mysql'
<% end -%>
<% if options[:elasticsearch] -%>
  elasticsearch:
    image: elasticsearch:1.7.1
    ports:
      - "9200"
      - "9300"
    volumes:
      - 'elasticsearch:/usr/share/elasticsearch/data'
<% end -%>
<% if options[:solr] %>
  solr:
    image: solr:latest
    ports:
      - "8983"
    volumes:
      - 'solr:/opt/solr/server/solr/mycores'
    entrypoint:
      - docker-entrypoint.sh
      - solr-precreate
      - mycore
    # docker-compose exec --user=solr solr bin/solr create_core -c CORENAME
<% end -%>
<% if options[:redis] -%>
  redis:
    image: 'redis:3.2-alpine'
    command: redis-server
    ports:
      - '6379'
    volumes:
      - 'redis:/var/lib/redis/data'
<% end -%>
<% if options[:fcrepo] -%>
  fcrepo:
    image: botimer/fcrepo:4.5.1
    volumes:
      - 'fcrepo:/opt/data'
    ports:
      - "8080"
<% end -%>
  main:
    image: "${REGISTRY_HOST}/${REGISTRY_URI}:${TAG}"
    volumes:
      - .:/app
    env_file:
      - .env
    # Keep the stdin open, so we can attach to our app container's process
    # and do things such as byebug, etc:
    stdin_open: true
    # Enable sending signals (CTRL+C, CTRL+P + CTRL+Q) into the container:
    tty: true
<% if options[:delayed_job] -%>
  delayed_job:
    extends:
      service: main
    command: ./bin/delayed_job run
    depends_on:
<%= compose_depends(:delayed_job) %>
<% end -%>
  web:
    extends:
      service: main
    command: bundle exec rails s -p 3000 -b '0.0.0.0'
    labels:
      rap.host: ${SITE_URI}
      rap.le_host: ${SITE_URI}
      rap.le_test: true
    ports:
      - "3000"
    depends_on:
<%= compose_depends %>

volumes:
<% if options[:postgres] -%>
  postgres:
<% end -%>
<% if options[:mysql] -%>
  mysql:
<% end -%>
<% if options[:elasticsearch] -%>
  elasticsearch:
<% end -%>
<% if options[:solr] -%>
  solr:
<% end -%>
<% if options[:redis] -%>
  redis:
<% end -%>



