version: '2'
services:
  web:
    image: <%= @project_name %>:latest
    command: bash -c "bundle exec rake assets:precompile db:migrate && bundle exec rails s -p 3000 -b '0.0.0.0'"
    environment:
      - RAILS_ENV=production
      - RACK_ENV=production
    restart: unless-stopped
    ports:
      - "3000:3000"
